{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": ["airbnb-base", "prettier"],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "no-use-before-define": ["error", { "classes": false }],
        "no-param-reassign": ["error", { "props": false }],
        "max-classes-per-file": [
            "error",
            { "ignoreExpressions": true, "max": 2 }
        ]
    }
}
